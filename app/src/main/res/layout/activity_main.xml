<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/gradient">

     <ImageView
         android:layout_margin="10dp"
         android:layout_width="40dp"
         android:layout_height="30dp"
         android:src="@drawable/arrow_back"
         android:scaleType="fitXY"
         />
      <TextView
          android:id="@+id/Nama"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Rezeki Akbar Amin Somar"
          android:textSize="20dp"
          android:fontFamily="casual"
          android:textStyle="bold"
          android:textColor="#ffff"
          android:layout_marginTop="55dp"
          android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/Jurusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teknik Informatika S-1"
            android:textSize="15dp"
            android:fontFamily="casual"
            android:layout_below="@id/Nama"
            android:layout_centerHorizontal="true"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/Alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Malang, Indonesia"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:textSize="15dp"
            android:textColor="#ffff"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Jurusan"
            android:layout_marginTop="2dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/location"
            android:layout_toStartOf="@id/Alamat"
            android:layout_below="@id/Jurusan"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="20dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:src="@drawable/profil"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <TextView
        android:id="@+id/jumlahfollowers"
        android:layout_below="@id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textColor="#00A9EC"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="130dp"
        android:textSize="22dp"
        android:text="500"/>
    <TextView
        android:id="@+id/jumlahfollowing"
        android:layout_below="@id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toEndOf="@id/jumlahfollowers"
        android:fontFamily="casual"
        android:textColor="#00A9EC"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="130dp"
        android:textSize="22dp"
        android:text="340"/>
    <TextView
        android:id="@+id/Followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:layout_below="@id/jumlahfollowers"
        android:textColor="#353434"
        android:textSize="16dp"
        android:fontFamily="casual"
        android:layout_marginLeft="105dp"
        />
    <TextView
        android:id="@+id/Followeing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jumlahfollowing"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@id/Followers"
        android:fontFamily="casual"
        android:text="Following"
        android:textColor="#353434"
        android:textSize="16dp" />



</RelativeLayout>